<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.udacity.sandwichclub.DetailActivity"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >

        <ImageView
            android:id="@+id/image_iv"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:adjustViewBounds="true"
            android:contentDescription="@string/sandwich_picture_content_description"
            android:scaleType="centerCrop"
            tools:src="@mipmap/ic_launcher"
            />

        <TextView
            android:id="@+id/also_known_label_tv"
            style="@style/Label"
            android:text="@string/detail_also_known_as_label"
            />

        <TextView
            android:id="@+id/also_known_tv"
            style="@style/Value"
            tools:text="Gloss cadunt in altus tolosa!"
            />

        <TextView
            android:id="@+id/ingredients_label_tv"
            style="@style/Label"
            android:text="@string/detail_ingredients_label"
            />

        <TextView
            android:id="@+id/ingredients_tv"
            style="@style/Value"
            tools:text="Lactas studere in domesticus culina! Nunquam magicae mensa."
            />

        <TextView
            android:id="@+id/origin_label_tv"
            style="@style/Label"
            android:text="@string/detail_place_of_origin_label"
            />

        <TextView
            android:id="@+id/origin_tv"
            style="@style/Value"
            tools:text="Elogium fidelis victrix est."
            />

        <TextView
            android:id="@+id/description_label_tv"
            style="@style/Label"
            android:text="@string/detail_description_label"
            />

        <TextView
            android:id="@+id/description_tv"
            style="@style/Value"
            android:layout_marginBottom="16dp"
            tools:text="Nixs resistere, tanquam grandis navis. Particula, axona, et fortis."
            />
    </LinearLayout>

</ScrollView>
